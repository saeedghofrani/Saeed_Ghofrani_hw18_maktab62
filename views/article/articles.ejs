<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('../common/header.ejs', {Document: "Articles" }) %>
    <link rel="stylesheet" href="/style/articles.css">

</head>

<body class="px-5">

  <%- include('../common/navbar.ejs') %>

    <section class="pt-5 pb-3 sectionTopArticle">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <h3 class="mb-3 Top4">4 TOP ARTICLE</h3>
          </div>
          <div class="col-6 text-right">
            <a class="btn btn-primary mb-3 mr-1 movingBtn" href="#carouselExampleIndicators2" role="button" data-slide="prev">
              <i class="fa fa-arrow-left"></i>
            </a>
            <a class="btn btn-primary mb-3  movingBtn" href="#carouselExampleIndicators2" role="button" data-slide="next">
              <i class="fa fa-arrow-right"></i>
            </a>
          </div>
          <div class="col-12">
            <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <div class="row">
                    <% for( let i=0; i < 2; i++ ) { %>
                      <div class="col-12 col-md-6 price-card">
                        <div class="blog-card m-3">
                          <div class="meta">
                            <div class="photo"
                              style="background-image: url(/images/article/<%=topArticle[i].image %>) ">
                            </div>
                            <ul class="details">
                              <li class="author">
                                <%= topArticle[i].author.username %>
                              </li>
                              <li class="date">
                                <%= topArticle[i].createdAt %>
                              </li>
                            </ul>
                          </div>
                          <div class="description row align-items-center">
                            <h1>
                              <%= topArticle[i].title %>
                            </h1>
                            <h2>Category: any</h2>
                            <p>
                              <%= topArticle[i].description %>
                            </p>
                            <p class="read-more">
                              <a class="readMore" href="/articles/<%= topArticle[i]._id%>">Read More</a>
                            </p>
                          </div>
                        </div>
                      </div>
                      <% } %>
                  </div>
                </div>
                <div class="carousel-item">
                  <div class="row">
                    <div class="row">
                      <% for( let i=2; i < 4; i++ ) { %>
                        <div class="col-12 col-md-6">
                          <div class="blog-card m-3">
                            <div class="meta">
                              <div class="photo"
                                style="background-image: url(/images/article/<%=topArticle[i].image %>) ">
                              </div>
                              <ul class="details">
                                <li class="author">
                                  <%= topArticle[i].author.username %>
                                </li>
                                <li class="date">
                                  <%= topArticle[i].createdAt %>
                                </li>
                              </ul>
                            </div>
                            <div class="description row align-items-center">
                              <h1>
                                <%= topArticle[i].title %>
                              </h1>
                              <h2>Category: any</h2>
                              <p>
                                <%= topArticle[i].description %>
                              </p>
                              <p class="read-more">
                                <a class="readMore" href="/articles/<%= topArticle[i]._id%>">Read More</a>
                              </p>
                            </div>
                          </div>
                        </div>
                        <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="lineDown"></div>
    <div class="border-container  pillar-container">
      <ul class="card-list">
        <% for( let i=0; i < data.length; i++ ) { %>
          <div class="blog-card col-9 col-md-6 col-xl-5 m-3">
            <div class="meta">
              <div class="photo" style="background-image: url(/images/article/<%=data[i].image %>) ">
              </div>
              <ul class="details">
                <li class="author">
                  <%= data[i].author.username %>
                </li>
                <li class="date">
                  <%= data[i].createdAt %>
                </li>
              </ul>
            </div>
            <div class="description row align-items-center">
              <h1>
                <%= data[i].title %>
              </h1>
              <h2>Category: any</h2>
              <p>
                <%= data[i].description %>
              </p>
              <p class="read-more">
                <a class="readMore" href="/articles/<%= data[i]._id%>">Read More</a>
              </p>
            </div>
          </div>
          <% } %>
      </ul>
    </div>


    <%- include('../common/scripts.ejs') %>
      <script src="/script/articles.js"></script>
</body>

</html>