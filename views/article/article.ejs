<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../common/header.ejs', {Document: "Articles" }) %>
        <link rel="stylesheet" href="/style/articles.css">
</head>

<body>
    <%- include('../common/navbar.ejs') %>


        <div class="container">
            <div class="row justify-content-center align-content-center no-wrap p-3">
                <div class="col-12 col-md-3">
                    <img src="/images/article/<%= data.image %> " alt="" class="img-responsive img-centered col-12 ">
                </div>
                <div class="col-12 col-md-9">
                    <p class="">
                        <%= data.title %>
                    </p>
                    <p class="">
                        <%= data.description %>
                    </p>
                    <p class="">
                        <%= data.author.username %>
                    </p>
                </div>
            </div>
            <div class="p-2 mt-2">
                <%= data.content %>
            </div>
        </div>
        <%- include('../common/scripts.ejs') %>
            <script src="/script/articles.js"></script>
</body>

</html>