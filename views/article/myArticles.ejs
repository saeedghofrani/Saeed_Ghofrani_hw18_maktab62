<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../common/header.ejs', {Document: "My Articles" }) %>
    <link rel="stylesheet" href="/style/articles.css">
        <link rel="stylesheet" href="/style/myArticles.css">
</head>

<body>
    <%- include('../common/navbar.ejs') %>

    <a class="button-37 btn ms-5" href="/articles/setup">
        add article
    </a>

        <ul class="card-list">
            <% for( let i=0; i < data.length; i++ ) { %>
                <div class="blog-card col-9 col-md-6 col-xl-5 m-3 <%= data[i]._id %>">
                    <div class="meta">
                        <div class="photo" style="background-image: url(/images/article/<%=data[i].image %>) ">
                        </div>
                        <ul class="details">
                            <li class="author">
                                <%= data[i].author.username %>
                            </li>
                            <li class="date">
                                <%= data[i].title %>
                            </li>
                        </ul>
                    </div>
                    <div class="description">
                        <h1>
                            <%= data[i].title %>
                        </h1>
                        <h2>Category: any</h2>
                        <p>
                            <%= data[i].description %>
                        </p>
                        <p class="read-more mt-4 d-flex justify-content-between">
                            <a class=" btn btn-primary mx-2" href="/articles/updateArticle/<%= data[i]._id%>">Update</a>
                            <a class=" btn btn-primary removeArticle mx-2" articleid="<%= data[i]._id%>">Remove</a>
                            <a class=" d-flex align-items-center"href="http://localhost:3000/articles/<%= data[i]._id%>">Read More</a>

                        </p>

                    </div>
                </div>
                <% } %>
        </ul>
        <%- include('../common/scripts.ejs') %>
            <script src="/script/MyArticles.js"></script>
</body>

</html>